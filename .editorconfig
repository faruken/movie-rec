root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python
# https://www.python.org/dev/peps/pep-0008/
[*.py]
indent_style = space
indent_size = 4

# Typescript
# https://github.com/microsoft/TypeScript/blob/master/.editorconfig
[{src,scripts}/**.{ts,json,js}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

